<% include ../partials/header %>
<% include ../partials/navbar %>
<h1 class="main-header">Edit <%= blog.name %> Blog</h1>

<form class="forms" action="/blogs/<%= blog._id %>?_method=PUT" method="POST"> 
    <input type="text" name="blog[name]" value="<%= blog.name %>" required>
    <input class="input-url" type="text" name="blog[image]" value="<%= blog.image %>">
    <textarea name="blog[description]" cols="30" rows="10" required><%=blog.description %>"</textarea>
    <input class="btn-def" type="submit">
</form>

